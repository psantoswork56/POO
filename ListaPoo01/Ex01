using System;

class Circulo{
  public double r;
  public double CalcArea(){
    double area = Math.PI*Math.Pow(r,2);
    return area;
  }
  public double CalPerimetro(){
    double perimetro = 2*Math.PI*r;
    return perimetro;
  }
}

class MainClass {
  public static void Main (string[] args) {
    Circulo x = new Circulo();
    x.r = 10;
    Console.WriteLine (x.CalcArea());
  }
}
